<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">     
        <shape>     
            <corners android:radius="5dip" />     
            <gradient android:startColor="#ff888888"    
                android:centerColor="#ff888888" android:endColor="#ff888888"    
                android:centerX="1" android:angle="270" />     
        </shape>     
    </item>
    <item android:id="@android:id/progress">     
        <clip>     
            <shape>     
                <corners android:radius="5dip" />     
                <gradient android:startColor="#ff84a239"    
                    android:centerColor="#ff84a239" android:endColor="#ff84a239"    
                    android:centerY="1" android:angle="270" />     
            </shape>     
        </clip>     
    </item>       
</layer-list>