<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_firewall_list_item_white"
    android:orientation="horizontal"
    android:paddingBottom="6.0dip"
    android:paddingLeft="6.0dip"
    android:paddingRight="5.0dip"
    android:paddingTop="6.0dip" >

    <ImageView
        android:id="@+id/firewall_item_icon"
        android:layout_width="42.0dip"
        android:layout_height="42.0dip"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/firewall_item_label"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1.0"
        android:singleLine="true"
        android:textColor="@color/color_dark"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_width="128.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/firewall_item_mobile"
            android:background="@drawable/firewall_left_allowed"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:scaleType="center"
            android:clickable="true"        
            android:src="@drawable/mobile_data_on" />

        <ImageView
            android:id="@+id/firewall_item_wifi"
            android:background="@drawable/firewall_right_allowed"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:scaleType="center"
            android:clickable="true"       
            android:src="@drawable/wifi_data_on" />
    </LinearLayout>

</LinearLayout>