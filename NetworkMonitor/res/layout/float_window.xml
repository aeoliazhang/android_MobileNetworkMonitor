<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_window"
    android:layout_width="200dip"
    android:layout_height="50dip"
    android:orientation="horizontal" 
    android:background="@drawable/float_window_bg">
 
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/float_window_mobile"
        android:layout_marginLeft="@dimen/dimen_5dip"/>
    
    <TextView 
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="00.00kB"
        android:layout_marginLeft="@dimen/dimen_5dip"
        android:layout_marginRight="@dimen/dimen_5dip"/>
        
</LinearLayout>