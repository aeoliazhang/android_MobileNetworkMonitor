<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_setting_exceed_prompt"
    android:background="@drawable/list_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:clickable="true">
    
    <TextView android:id="@+id/exceed_prompt_label"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_label_exceeding_prompt"
        android:textSize="@dimen/dimen_textsize_18sp"
        android:textColor="@color/color_black"
        android:paddingLeft="@dimen/dimen_5dip"/>
    
    <Button android:id="@+id/exceed_prompt_switchbtn"        
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30dip"
        style="@style/switch_style_button"/>  	
</RelativeLayout>