<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_selector_item"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:baselineAligned="false"    
    android:clickable="true"
	android:background="@drawable/alert_item_selector">
    <TextView android:id="@+id/single_selector_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dip"    	
        android:layout_alignParentLeft="true" 
     	android:layout_centerVertical="true" 
     	android:textColor="@color/color_black"
     	style="?android:attr/textAppearanceLarge"/>
    
    <RadioButton android:id="@+id/single_selector_item_button"            
        android:layout_width="wrap_content"  
        android:layout_height="fill_parent"
        android:layout_marginRight="15dip"
        android:layout_alignParentRight="true" 
     	android:layout_centerVertical="true"          
        style="@style/radio_style_button" />               
</RelativeLayout>		   